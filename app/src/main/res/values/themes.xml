<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Accounts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="InsertTheme" parent="Theme.AppCompat">
        <!-- 背景色，此处的背景色一定要设置为透明度背景色-->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- window is translucent 窗口半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- window No Title 窗口无标题-->
        <item name="android:windowNoTitle">true</item>
        <!-- 弹出动画-->
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="DefaultButton" parent="android:ButtonBar">
        <item name="backgroundColor">@color/default_button</item>
    </style>
</resources>